# ============================================
# Chroma Bridge Server Configuration
# ============================================

# Choose mode: "true" for Chroma Cloud, "false" for local persistent storage
USE_CHROMA_CLOUD=false

# ---- Chroma Cloud Configuration (required if USE_CHROMA_CLOUD=true) ----
# Get these from your Chroma Cloud dashboard at https://trychroma.com
CHROMA_API_KEY=your_api_key_here
CHROMA_TENANT=your_tenant_id_here
CHROMA_DATABASE=your_database_name_here

# ---- Local Persistent Configuration (used if USE_CHROMA_CLOUD=false) ----
CHROMA_DB_PATH=./chroma_db

# ---- Bridge Server Settings ----
CHROMA_BRIDGE_PORT=9000
MAX_PAYLOAD_MB=10

# ---- Authentication ----
# Optional: Set this to require X-API-Key header on bridge requests
ZO_API_KEY=

# ---- Hook Client Configuration ----
# Set this on the machines running Claude Code hooks
# Point to your bridge server (local or remote)
ZO_EVENT_ENDPOINT=http://localhost:9000/ingest

# Local fallback: Events always write here regardless of remote endpoint
ZO_EVENT_LOG_DIR=~/.zo/claude-events

# Redaction mode: strict (default), lenient, or disabled
ZO_REDACTION_MODE=strict

# Optional: Salt for hostname hashing in redaction
HOSTNAME_SALT=default_salt

# ---- Orchestration ----
# Run ID for correlating events across workers
# Set by session_start hook, inherited by worker VMs
CLAUDE_RUN_ID=

# ---- Debugging ----
DEBUG_LOGGING=false
